# Z+ Management Platform Environment Configuration
# Copy this file to .env and configure your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zplus_management
DB_USERNAME=zplus_user
DB_PASSWORD=your_secure_password_here

# Application Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=prod

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_256_bits
JWT_EXPIRATION=86400000

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@zplus.com

# Email Configuration (Optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@zplus.com

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=50MB

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/application.log

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
BCRYPT_ROUNDS=12

# Cache Configuration (Optional)
CACHE_ENABLED=true
CACHE_TTL=3600

# Monitoring Configuration (Optional)
MANAGEMENT_ENDPOINTS_ENABLED=true
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Docker Configuration
POSTGRES_DB=zplus_management
POSTGRES_USER=zplus_user
POSTGRES_PASSWORD=your_secure_password_here

# Production specific settings
# Uncomment and configure for production deployment
# SSL_ENABLED=true
# SSL_KEYSTORE_PATH=keystore.p12
# SSL_KEYSTORE_PASSWORD=your_keystore_password
# SSL_KEY_ALIAS=zplus
